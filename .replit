modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Start"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=80 INTERNAL_PORT=3001 node --import tsx src/server/server.ts"
waitForPort = 3001

[[workflows.workflow]]
name = "Build and Start"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:client && npm run dev:server"
waitForPort = 3000

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development     VITE_DEV_PORT=5173     VITE_API_PORT=3001     VITE_API_EXTERNAL_PORT=80     VITE_FRONTEND_PORT=5000     VITE_WS_PROTOCOL=ws     VITE_WS_HOST=0.0.0.0     VITE_WS_PORT=5173     VITE_HMR_TIMEOUT=120000     VITE_HMR_MAX_RETRIES=100     VITE_HMR_RECONNECT_DELAY_MIN=1000     VITE_HMR_RECONNECT_DELAY_MAX=30000     VITE_HMR_PATH=@vite/client     VITE_HMR_OVERLAY=true     VITE_HMR_CLIENT_PORT=443     vite dev --host 0.0.0.0 --port 5173"
waitForPort = 5173

[deployment]
run = ["sh", "-c", "NODE_ENV=development PORT=80 INTERNAL_PORT=3001 node --import tsx src/server/server.ts"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 5000

[objectStorage]
defaultBucketID = "replit-objstore-abf868d0-76be-42b3-ba44-42573994d8a9"
